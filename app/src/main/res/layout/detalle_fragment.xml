<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.visita.DetalleFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="Paciente:"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tvDetallePacienteNombre"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="DirecciÃ³n:"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tvDetallePacienteDireccion"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="Prestacion:"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tvDetallePrestacion"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:text="Numero Prestacion"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tvDetalleNumero"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/btnAltaVisita"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Completar Visita"

            android:textSize="15dp" />


    </LinearLayout>

    <ListView
        android:id="@+id/lvHistoria"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1" />

</LinearLayout>